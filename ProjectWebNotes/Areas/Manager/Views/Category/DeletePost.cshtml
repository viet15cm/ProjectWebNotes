@model PostDto
@{
    ViewBag.Title = "Xóa";

    var category = ViewData["category"] as CategoryBranchPosts;    
}

<div class="container">

    <div class="row">
        <div class="col-md-8">
            @{
                @await Html.PartialAsync("_GetPostBranchPartial", category)       
            }
        </div>
        <div class="col-md-4">
            <h2>@ViewBag.Title</h2>
            <form method="post" asp-route-id="@category.Category.Id" asp-route-postid="@Model.Id">

                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Slug)          
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Slug)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.Raw(Model.Description)
                    </dd>

                </dl>

                <p>
                      <div asp-validation-summary="All"></div>
                       <button type="submit" class="btn btn-sm btn-danger">Xóa</button> |
                    @Html.ActionLink("Quay trở lại danh sách", "index", "category")
                </p>
            </form>

        </div>

    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}