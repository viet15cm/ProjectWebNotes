@model PostDto
@{
    ViewBag.Title = "Xóa";

    var posts = ViewData["Posts"] as PagedList<PostDto>;
    var paging = new Pagin()
            {
                UrlAction = "Posts",
                CurrentPage = posts.CurrentPage,
                TotalPages = posts.TotalPages,
            };

}

<div class="container">

    <div class="row">
        <div id="posts-item" class="col-md-8">
            @{
                @await Html.PartialAsync("_PostPagingPartial", posts)
            }
        </div>
        <div class="col-md-4">
            <h2>@ViewBag.Title</h2>
            <form method="post" asp-action="DeletePost">

                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Slug)          
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Slug)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.Raw(Model.Description)
                    </dd>

                </dl>

                <p>
                      <div asp-validation-summary="All"></div>
                       <button type="submit" class="btn btn-sm btn-danger">Xóa</button> |
                    @Html.ActionLink("Quay trở lại", "index")
                </p>
            </form>

        </div>

    </div>
</div>

@section Scripts {

     @await Html.PartialAsync("_ValidationScriptsPartial")
}