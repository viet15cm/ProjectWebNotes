@inject IHttpContextAccessor iHttpContextAccessor
@{
    var theme = iHttpContextAccessor.HttpContext.Request.Cookies["theme"]?.ToString();
}  
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <title>@ViewData["Title"] - Viet IT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("CSSHighlight", required: false)
    
    @{

        if (theme == null || theme == "0")
        {
            <link id="site-theme" href="~/css/site.css" rel="stylesheet" />
            <link id="arduino-light-theme" href="~/highlight/styles/arduino-light.min.css" rel="stylesheet" />
        }
        else
        {
            <link id="site-theme" href = "~/css/site-black.css" rel = "stylesheet" />
            <link id="arduino-light-theme" href="~/highlight/styles/a11y-dark.min.css" rel="stylesheet" />
        }
    }
    <link rel="stylesheet" href="~/ProjectWebNotes.styles.css" asp-append-version="true" />

     
</head>
<body>
    <header>
        <nav class="navbar navbar-header navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                @await RenderSectionAsync("IconOffcanvasListPost", required: false)
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Việt IT</a>
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @await RenderSectionAsync("BoxListCategory", required: false)
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        @await Html.PartialAsync("_FunctionPartial")

                        @await Html.PartialAsync("_LoginPartial")
                        <li>
                            <select id="theme" class="theme" name="theme">
                                @if (theme == null || theme == "0")
                                {
                                    <option selected value="0">&#9788;</option>
                                    <option value="1">&#9790;</option>
                                }
                                else
                                {
                                    <option value="0">&#9788;</option>
                                    <option selected value="1">&#9790;</option>
                                }
                            </select>
                        </li>
                    </ul>
                   
                </div>
            </div>
        </nav>
        @await RenderSectionAsync("CategorySidebarSmall", required: false)
        <div style="z-index:9999999" class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
            <div class="offcanvas-header">
                <h2 class="offcanvas-title" id="offcanvasScrollingLabel"><i class="bi bi-menu-button-fill"></i> Menu</h2>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                dsfkjathj
            </div>
        </div>
    </header>
    <div class="fill-space"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Viet IT ASP.NET Core runtime version 7.0.1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @await RenderSectionAsync("highlight", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
      
        function myFunction() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        window.onclick = function (event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                var i;
                for (i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
