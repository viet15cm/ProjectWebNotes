@using System.Globalization;
@model PagedList<PostNewDto>
@{
    var posts = Model;

    var paging = new Pagin()
    {
        UrlAction = "index",
        CurrentPage = posts.CurrentPage,
        TotalPages = posts.TotalPages,
    };
}
<ul>

    @foreach (var post in posts)
    {
       
        <li>
            <a asp-area="Docs" asp-controller="ViewDocs" asp-action="post" asp-route-post="@post.Slug">@post.Title</a>
            <span class="date">
                @post.DateCreate?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)
            </span>
        </li>

    }
    @await Html.PartialAsync("_PaginPartial", paging)
</ul>

